<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Teck blog</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/css/login.css" />
    <link rel="stylesheet" href="/css/style.css" />
    <link rel="stylesheet" href="/css/dashboard.css" />
    <link rel="stylesheet" href="/css/home.css" />
  </head>

  <body>
    <div class="flex-column justify-space-around">
      <header class="d-flex justify-content-start gp-2">
        <a href="/">Home</a>
        {{#if logged_in}}
          <a href="/dashboard">Dashboard</a>
          <a id="logout" href="/api/user/logout">Logout</a>
          <h3 id="userLoggedIn">Welcome: {{user_name}}</h3>
        {{else}}
          <a id="login" href="/api/user/login">Login</a>
        {{/if}}
      </header>

      <main class="d-flex container-fluid justify-content-center mt-5">

        {{{body}}}
      </main>
    </div>
    <footer class="d-flex justify-content-start gp-2">
      <h6 id="footer-content">MVC Tech Blog & copy right 2024</h6>
    </footer>
    <script type="text/javascript" src="/js/login.js"></script>
    <script type="text/javascript" src="/js/logout.js"></script>
  </body>

</html>